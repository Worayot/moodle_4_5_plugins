<h3>{{#str}}bookmarkedcourses, local_bookmark{{/str}}</h3>

{{#courses}}
  <div class="course-card">
  <div class="course-title">
    <a href="{{viewurl}}">{{fullname}}</a>
  </div>
  <div class="course-actions">
    {{#bookmarked}}
      <a href="{{unbookmarkurl}}" class="btn btn-danger bookmark-toggle">
        {{#str}}removebookmark, local_bookmark{{/str}}
      </a>
    {{/bookmarked}}
    {{^bookmarked}}
      <a href="{{bookmarkurl}}" class="btn btn-primary bookmark-toggle">
        {{#str}}addbookmark, local_bookmark{{/str}}
      </a>
    {{/bookmarked}}
  </div>
</div>

{{/courses}}

{{^courses}}
  <p>{{#str}}nobookmarks, local_bookmark{{/str}}</p>
{{/courses}}