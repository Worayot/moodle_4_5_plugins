    <p>เลือกรูปแบบ Export:</p>
    {{#export_scope}}
      <label>
        <input type="radio" name="scope" value="{{key}}" {{#selected}}checked{{/selected}}> {{label}}
      </label><br>
    {{/export_scope}}

    <p>ดาวน์โหลดข้อมูล:</p>
